<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js sg-html-html" {{ site.language_attributes }}> <!--<![endif]-->

    <head>
        <meta charset="{{ site.charset }}" />
        <title>Style Guide - {{ site.name }}</title>
        <meta name="description" content="Style Guide for {{ site.name }}">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {# Style Guide Styles #}
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/vendor/prism.css">
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/vendor/sg-bootstrap.css">
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/sg-base.css">
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/sg-header.css">
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/sg-side-nav.css">
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/sg-tabs.css">
        <link rel="stylesheet" href="{{ theme.link }}/views/style-guide/assets/css/sg-footer.css">

        {# Style Guide Scripts #}
        <script type="text/javascript" src="{{ theme.link }}/views/style-guide/assets/javascript/vendor/prism.js"></script>
        <script type="text/javascript" src="{{ theme.link }}/views/style-guide/assets/javascript/sg-main.js"></script>

        {# Styles #}
        <link rel='stylesheet' href='{{ theme.link ~ '/style.css' }}' type='text/css' media='all' />

        {# Scripts #}


    </head>

    <body class="style-guide language-twig sg-html-body">

        <div id="page">

            <div id="wrapper">

                <header class="sg-header">

                    <div class="sg-container">
                        <div class="logo">
                            <h1>
                                the Style Guide
                            </h1>
                        </div>

                        <div class="tagline">
                            <strong>Style Guide</strong> 2018
                        </div>
                    </div>


                </header>

                <aside class="sg-side-nav">

                    <button type="button" class="sg-nav-toggle sg-html-button" aria-label="Open Navigation">
                        <span class="bar" aria-hidden="true"></span>
                        <span class="bar" aria-hidden="true"></span>
                        <span class="bar" aria-hidden="true"></span>
                    </button>

                    <button type="button" class="sg-nav-toggle-close sg-html-button" aria-label="Close">
                        <span class="x"></span>
                    </button>

                    <nav>
                        <ul>
                            <li>
                                <a href="#">
                                    Typography
                                </a>

                                <ul>
                                    <li>
                                        <a href="#sg-section-headings">
                                            Headings
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#sg-section-paragraph">
                                            Paragraph
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#sg-section-footnote">
                                            Footnote
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#sg-section-blockquote">
                                            Blockquote
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#sg-section-lists">
                                            Lists
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">
                                    Buttons
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Forms
                                </a>
                            </li>
                        </ul>
                    </nav>

                </aside>

                <div id="content" role="main">

                    {% block content %}

                    <section class="sg-section">
                        <div class="sg-heading sg-container">
                            <h1>Typography</h1>
                        </div>

                        {% include 'style-guide/layout/page-nav.twig' with {
                            main: 'Typography',
                            items: [
                                {
                                    id: 'headings',
                                    name: 'Headings'
                                },
                                {
                                    id: 'paragraph',
                                    name: 'Paragraph'
                                },
                                {
                                    id: 'footnote',
                                    name: 'Footnote'
                                },
                                {
                                    id: 'blockquote',
                                    name: 'Blockquote'
                                },
                                {
                                    id: 'lists',
                                    name: 'Lists'
                                },
                                {
                                    id: 'more',
                                    name: 'More'
                                }
                            ]
                        } %}
                    </section>

                    {% include 'style-guide/layout/element.twig' with {id: 'headings', headline: 'Headings', content: 'style-guide/elements/typography-headings.twig', extra: '<h1 class="decor">Heading 1 w/ Decor</h1>' } %}
                    {% include 'style-guide/layout/element.twig' with {id: 'paragraph', headline: 'paragraph', content: 'style-guide/elements/typography-paragraph.twig', container: true } %}
                    {% include 'style-guide/layout/element.twig' with {id: 'footnote', headline: 'footnote', content: 'style-guide/elements/typography-footnote.twig', container: true } %}
                    {% include 'style-guide/layout/element.twig' with {id: 'blockquote', headline: 'blockquote', content: 'style-guide/elements/typography-blockquote.twig', container: true } %}1
                    {% include 'style-guide/layout/element.twig' with {id: 'lists', headline: 'Lists', content: 'style-guide/elements/typography-lists.twig', container: true, notes: 'Modifier Classes:<br> <code>.list-social</code>: For Social Links' } %}
                    {% include 'style-guide/layout/element.twig' with {id: 'more', headline: 'more', content: 'style-guide/elements/typography-more.twig', container: true } %}

                    {% endblock %}
                </div>
                <!-- end /#content -->

            </div>
            <!-- /#wrapper -->

            <footer class="sg-footer">

                <div class="sg-container">
                    <div class="logo">
                        <img src="{{ theme.link }}/views/style-guide/assets/images/mg-logo.png"
                             srcset="{{ theme.link }}/views/style-guide/assets/images/mg-logo.png 1x, {{ theme.link }}/views/style-guide/assets/images/mg-logo_2x.png 2x"
                             width="40"
                             height="40"
                             alt="Mindgruve">
                    </div><!-- .logo     -->
                    <div class="copyright">
                        &copy; Copyright 2018 Mindgruve, <br class="sg-visible-xs">
                        All Rights Reserved
                    </div>
                </div>

            </footer>

        </div>
        <!-- /#page -->

    </body>
</html>